{% extends '::fredi/base.html.twig' %}

{% block body %}
    <div class="page-header">
        <div class="page-title">
            <h3>Cost</h3>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover table-checkable table-responsive">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cost.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if cost.date %}{{ cost.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Reason</th>
                <td>{{ cost.reason }}</td>
            </tr>
            <tr>
                <th>Journey</th>
                <td>{{ cost.journey }}</td>
            </tr>
            <tr>
                <th>Km</th>
                <td>{{ cost.km }}</td>
            </tr>
            <tr>
                <th>Journeycost</th>
                <td>{{ cost.journeyCost }}</td>
            </tr>
            <tr>
                <th>Toll</th>
                <td>{{ cost.toll }}</td>
            </tr>
            <tr>
                <th>Meal</th>
                <td>{{ cost.meal }}</td>
            </tr>
            <tr>
                <th>Accommodation</th>
                <td>{{ cost.accommodation }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ cost.total }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('cost_index') }}" class="btn btn-success pull-left">Retour</a>
    <a href="{{ path('cost_edit', { 'id': cost.id }) }}" class="btn btn-primary pull-left">Modifier</a>
    {{ form_start(delete_form) }}
        <input type="submit" value="Delete" class="btn btn-danger pull-left">
    {{ form_end(delete_form) }}
{% endblock %}
