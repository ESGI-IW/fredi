{% extends '::fredi/base.html.twig' %}

{% block body %}
    <div class="page-header">
        <div class="page-title">
            <h3>Cost</h3>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover table-checkable table-responsive">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ costline.cost.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if costline.cost.date %}{{ costline.cost.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Ville de Départ</th>
                <td>{{ costline.cityStart }}</td>
            </tr>
            <tr>
                <th>Ville d'arrivée</th>
                <td>{{ costline.cityEnd }}</td>
            </tr>
            <tr>
                <th>Distance</th>
                <td>{{ costline.distance }}</td>
            </tr>
            <tr>
                <th>Motif</th>
                <td>{{ costline.cost.reason }}</td>
            </tr>
            <tr>
                <th>Prix du voyage</th>
                <td>{{ costline.cost.journeyCost }}</td>
            </tr>
            <tr>
                <th>Péage</th>
                <td>{{ costline.cost.toll }}</td>
            </tr>
            <tr>
                <th>Repas</th>
                <td>{{ costline.cost.meal }}</td>
            </tr>
            <tr>
                <th>Hébergement</th>
                <td>{{ costline.cost.accommodation }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ costline.cost.total }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('cost_index') }}" class="btn btn-success pull-left">Retour</a>
    <a href="{{ path('costline_edit', { 'id': costline.id }) }}" class="btn btn-primary pull-left">Modifier</a>
{% endblock %}
