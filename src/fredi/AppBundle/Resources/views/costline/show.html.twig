{% extends '::fredi/base.html.twig' %}

{% block body %}
    <h1>CostLine</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ costLine.id }}</td>
            </tr>
            <tr>
                <th>Citystart</th>
                <td>{{ costLine.cityStart }}</td>
            </tr>
            <tr>
                <th>Cityend</th>
                <td>{{ costLine.cityEnd }}</td>
            </tr>
            <tr>
                <th>Distance</th>
                <td>{{ costLine.distance }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cost_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('costline_edit', { 'id': costLine.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
